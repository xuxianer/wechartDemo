/* destination.wxss */
.section{
  height: 50px;
  width: 100%;
  padding-bottom: 10px;
  border-bottom: 1px solid #ccc;
}
.section input{
  width:65%;
  border:1px solid #c3c3c3;
  height:26px;
  border-radius: 3px;
  padding: 0 5px;
}
.text_box{
  margin: 10px 25px;
  border-bottom:1px solid #c3c3c3;
  padding-bottom:10px;
  width: 100%;
}
.section .checkCity{
  display:inline-block;
  padding:2px;
  width:16%;
  line-height:1.6;
  margin-left:1rem;
  margin-top:1rem;

}
.rightNav{
  position: absolute;
  right:1em;
  top:5em;
  z-index: 10;
}
.rightNav{
  color: #CF4A36;
  font-size: 12px;
}
.rightNav text{
  display: block;
  margin-top:3px; 
}
.cityDetail{
  position: absolute;
  top:3.5em;
  bottom:0;
  overflow-x: hidden;
  overflow-y: auto;
}
.cityDetail .cityS{
  display: inline-block;
  font-size: 18px;
  border-bottom:1px solid #ccc;
  height: 2.8em;
  width: 100%;
  line-height: 2.8em;
  padding-left: 2em;

}
.hide{
  display: none;
}
.show{
  display: block;
}
.First{
  padding-left: 1em;
  font-weight: bold;
  color: #999;
  background-color: #F0F0F0;
  height: 2.5em;
  line-height: 2.5em;
}
page{
  background-color: #fff;
}