/* CouponList.wxss */
.Coupon{
  padding: .4em;
}
.cost{
  float: left;
  width: 30%;
  height: 4em;
  line-height: 4em;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  color: #fff;
  background-color: #FE6A14;
  text-align: center;
}
.content{
  width:68%;
  height:4em;
  border:1px solid #eee;
  border-top-right-radius:5px;
  border-bottom-right-radius:5px;
  background-color:#fff;
  margin-left:30%;
  padding-left:1em;
  line-height:1.5;
}
.title{
  font-size: 18px;
  margin-top: 4px;
}
.usecondition,.dateTime{
  font-size: 14px;
  color: #999;
  margin-top: 6px;
}
