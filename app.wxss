.container{
  font-family:UICTFontTextStyleBody;
  padding-bottom: 2em;
}
navigator{
  display: inline-block;
  margin-left: 20px;
  padding: 0 .7em;
  font-size: 18px;
}
.Nav{
height:3em;
line-height:3em;
background-color:#fff;
box-shadow:#999 0 3px 2px -3px;
padding-bottom:3px;
display:flex;
align-items:center;
justify-content:space-around;


}
.navigator-hover{
  color: #fff;
}
navigator.on{
  color: #fe6813;
  border-bottom: 4px solid #fe6813;
}
.baseMsgZone{
  margin-top: 1em;
  background-color: #fff;
